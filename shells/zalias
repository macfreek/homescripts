# User defined alias script for zsh
# This file is sourced from .zshrc
# See also /etc/bash_aliases for the global bash equivalent
# See also .alias.csh for the csh/tcsh equivalent

# Note: bash and zsh do not allow spaces before or after the "="!, unlike csh

##
# Aliases
##

# Set up aliases
alias mv='nocorrect mv -i'       # no spelling correction on mv
alias cp='nocorrect cp -ip'      # no spelling correction on cp
alias mkdir='nocorrect mkdir'    # no spelling correction on mkdir
alias rm='nocorrect rm -i'       # no spelling correction on mv
alias scp='scp -p'               # preserve permissions
alias find='noglob find'
alias screen='TERM=screen screen'

#alias grep=egrep
#alias topcpu='/usr/bin/top -ocpu -R -F -s 2 -n30'

# coloured ls output
if ls --version 2> /dev/null | grep -E "(.+utils)"> /dev/null 2>&1; then
    # GNU version of ls
    alias ls="ls -p --color=auto"
else
    # BSD version of ls
    alias ls="ls -FG"
fi

alias ll='ls -l'
alias la='ls -a'

# List only directories and symbolic
# links that point to directories
#alias lsd='ls -ld *(-/DN)'

# List only file beginning with "."
alias lsa='ls -ld .*'


##
# Functions
##

# Shell functions
#setenv() { typeset -x "${1}${1:+=}${(@)argv[2,$#]}" }  # csh compatibility
#freload() { while (( $# )); do; unfunction $1; autoload -U $1; shift; done }



files     () { find ${1} -type f -print ; }
ff        () { find . -name ${1} -print ; }
word      () { fgrep -i "$*" /usr/dict/web2 ; }
wordcount () { cat "${1}" | tr -s ' 	.,;:?\!()[]"' '\012' | \
	       cat -n | tail -1 | awk '{print $1}' ; }
function vnctunnel { ssh $* -L 5900:127.0.0.1:5900 }
function gr { find . -type f | xargs grep -n $* | more }


