#                    echo -n ${(l:$COLUMNS:::):-}
#                  }                                                                    
#        preexec () { print -Pn "\e]0;%n@%m: $3\a" }
#        ;;
#esac

# History saving through sessions
HISTFILE=$HOME/.zshhistory
HISTSIZE=3000
SAVEHIST=3000
